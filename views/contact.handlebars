<div class="container-fluid black-container">
   <div class="row">
      <div class="col-span-12 text-center">
      </div>
   </div>
</div>
<div class="container box_layout">
  <form action="">
    <div class="row">
      <div class="col-md-6">
        <div class="contact_form">
          <section class="mb-4">
            <h2 class="contact_heading my-4">Contact Us</h2>
            <p class="text-left mb-5 mx-auto">Reach out to us for any inquiry</p>

            <div class="row">
              <div class="col-md-12 mb-md-0 mb-5">
                <div class="row">
                  <div class="col-md-12">
                    <div class="md-form mb-0">
                      <input
                        type="text"
                        id="name"
                        value=""
                        name="name"
                        placeholder="Full name"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="md-form mb-0">
                      <input
                        type="text"
                        value=""
                        id="email"
                        name="email"
                        placeholder="Your email"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="md-form">
                      <textarea
                        type="text"
                        id="message"
                        name="message"
                        rows="2"
                        placeholder="Message"
                        class="form-control md-textarea"
                      ></textarea>
                    </div>
                  </div>
                  <div class="text-center text-md-left">
                    <input
                      type="submit"
                      class="btn btn-primary"
                      value="SUBMIT"
                    />
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>

      <div class="col-md-6 text-center">
        <div class="location_img">
          <img
            src="https://via.placeholder.com/400.png?text=map+image"
            class="img-fluid"
          />
        </div>
      </div>
    </div>
  </form>
</div>